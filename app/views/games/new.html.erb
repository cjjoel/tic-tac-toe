<div class="p-4 rounded-md shadow-md border w-1/3 mx-auto">
    <%= form_for @game, url: game_path do |form| %>
      <%= form.label :player_turn, t("form.player_turn"), class: "block text-sm text-gray-700 font-medium" %>
      <%= form.select :player_turn, [[t("form.first_turn"), Constants::FIRST_TURN], [t("form.second_turn"), Constants::SECOND_TURN]], {}, { class: "block mb-8 rounded-md shadow-sm w-full" } %>
      <%= form.label :player, t("form.player"), class: "block text-sm text-gray-700 font-medium" %>
      <%= form.select :player, [Constants::X, Constants::O], {}, { class: "block mb-8 rounded-md shadow-sm w-full" } %>
      <%= form.submit t("form.play"), class: "border bg-indigo-600 rounded-md shadow-sm text-white py-2 px-4 w-20", data: { turbo: "false" }%>
      <%= form.submit t("form.reset"), :type => "reset", class: "border rounded-md shadow-sm py-2 px-4 w-20" %>
    <% end %>
</div>
